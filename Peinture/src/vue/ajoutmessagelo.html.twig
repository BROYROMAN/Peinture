{% extends "base.html.twig" %}

{% block title %} {{ parent() }} - Gallerie {% endblock %}
       
{% block contenu %}
 <div class="col-md-8 offset-md-2">
                    <span class="anchor" id="formUserEdit"></span>
                    
                    
                    <hr class="my-5">
                    {%if session.login is defined %}
                   {%if session.role == 1 %}
                    <a class="btn btn-primary"  href="index.php?page=listemessage" role="button">Liste des message </a> 
                    {% endif %}
                    {% endif %}
                    <!-- form user info -->
                    <div class="card card-outline-secondary">
                        {% if form is empty %} 
                        {% elseif form.valide == true %} <div id="messagealert" class="alert alert-success" role="alert" style="text-align: center;">{{form.message}}</div>
                         {% elseif form.invalide == false %} <div id="messagealert" class="alert alert-danger" role="alert" style="text-align: center;">{{form.message}}</div>{% endif%}
                        <div class="card-header">
                            <h3 class="mb-0" style="text-align: center;">Ajout d'un  messages :</h3>
                        </div>
                        <div class="card-body">
                            <form class="form" role="form"  action="index.php?page=ajoutmessagelo" method="POST" enctype="multipart/form-data">
                    <h1 style="text-align: center;"> Laissez nous un commentaire !</h1>
                    <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label" for="pseudo">Pseudo:</label>
                             <div class="col-lg-9">
                            <input type="text" class="form-control" name="pseudo" id="pseudo">
                    </div>
                            </div>
                    <div class="form-group row">
                      <label class="col-lg-3 col-form-label form-control-label" for="pwd">Email:</label>
                       <div class="col-lg-9">
                      <input type="email" name="email" class="form-control" id="email">
                    </div> 
                      </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label" for="comment">Message:</label>
                     <div class="col-lg-9">
                    <textarea name="message" class="form-control" rows="5" id="message"></textarea>
                        </div> 
                       </div> 
                    
                  
                     <div class="form-group row">
                          <label class="col-lg-3 col-form-label form-control-label" for="note">Note:</label>
                     <div class="rate">
                        <input type="radio" id="star5" name="rate" value="5" />
                        <label for="star5" title="text">5 stars</label>
                        <input type="radio" id="star4" name="rate" value="4" />
                        <label for="star4" title="text">4 stars</label>
                        <input type="radio" id="star3" name="rate" value="3" />
                        <label for="star3" title="text">3 stars</label>
                        <input type="radio" id="star2" name="rate" value="2" />
                        <label for="star2" title="text">2 stars</label>
                        <input type="radio" id="star1" name="rate" value="1" />
                        <label for="star1" title="text">1 star</label>
                      </div>
                     </div>
                     <br> <br>
                    <center><input type="submit" class="btn btn-primary" name="btAjoutMessLO" id="btAjoutMessLO" value="Ajouter"></center>
                     </form>
                        </div>
                    </div>
                    <!-- /form user info -->

                </div>         
                                                                                             
{% endblock %} {# empty Twig template #}
